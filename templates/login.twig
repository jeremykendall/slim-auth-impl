{% extends 'layout.twig' %}

{% block page_title %}{{ parent() }} | Login{% endblock %}

{% block stylesheets %}
<link href="/css/signin.css" rel="stylesheet">
{% endblock %}

{% block content %}
<form class="form-signin well well-sm" role="form" name="login" id="login" method="post">
    <h2 class="form-signin-heading">Please log in</h2>
    {% if flash['error'] is defined %}
    <div class="alert alert-danger">
        {{ flash.error }}
    </div>
    {% endif %}
    <input type="text" name="username" class="form-control" placeholder="Username" value="{{ username }}" autofocus required>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
</form>
<div class="row" style="padding-top: 10px;">
    <div class="form-signin well well-sm">
        <h3 class="form-signin-heading">Credentials</h3>
        <div class="text-center">
            <p>Admin: admin / admin</p>
            <p>Member: member / member</p>
        </div>
    </div>
</div>
{% endblock %}
